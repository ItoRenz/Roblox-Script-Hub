    {name = "ğŸ‘ï¸ Visibility", icon = "ğŸ‘ï¸", expanded = false, scripts = {hideScript, hidePlayersScript}},
    {name = "ğŸ“± Interface", icon = "ğŸ“±", expanded = false, scripts = {hideUIScript}},
