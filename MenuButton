        if not menuOpen then 
            TweenService:Create(toggleButton, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {
                Size = UDim2.new(0, 30, 0, 30)
            }):Play()
        end
    end)
    
    safeConnect(toggleButton.MouseButton1Down, function()
